<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dx.bilibili.ui.test.activity.TestNavigationActivity">

    <Button
        android:id="@+id/news_btn"
        android:text="新闻"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main" />

    <Button
        android:id="@+id/toolbar_behavior_mvp_btn"
        android:text="Toolbar随滑动收展(mvp)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/news_btn" />

    <Button
        android:id="@+id/status_picture_mvp_btn"
        android:text="statusbar同toolbar一个背景(mvp)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_behavior_mvp_btn" />

    <Button
        android:id="@+id/scroll_gradient_mvp_btn"
        android:text="滑动toolbar渐变,statusbar同toolbar一个背景(mvp)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/status_picture_mvp_btn" />

    <Button
        android:id="@+id/test_api_btn"
        android:text="测试api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toBottomOf="@+id/scroll_gradient_mvp_btn" />

    <Button
        android:id="@+id/test_room_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试Room"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/test_api_btn"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/test_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试Service"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/test_room_btn"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/test_unbind_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind"
        app:layout_constraintStart_toStartOf="@id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/test_service_btn"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
